<div class="container">
    <div class="row">
        <div class="loginPanel">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Giriş Paneli</div>
                </div>
                <div class="panel-body">
                    <form action="/login" method="POST">
                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="login-username" type="text" class="form-control" name="username" placeholder="kullanıcı adı">
                        </div>
                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="login-password" type="text" class="form-control" name="password" placeholder="şifre">
                        </div>
                        <input type="submit" class="btn btn-success" value="Giriş">
                        <a href="/login/signup" class="btn btn-default">Kayıt Ol</a>
                    </form>
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        
                        <!--<a href="#" class="btn btn-success">Giriş</a>-->
                        
                        <%if(typeof username!='undefined'){%>
                            <h3><%=username%></h3>
                        <%}%>
                        <%if(typeof password!='undefined'){%>
                            <h3><%=password%></h3>
                            
                        <%}%>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>