<div class="container">
    <div class="row">
        <div class="loginPanel">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Kayıt Paneli</div>
                </div>
                <div class="panel-body">
                    <form action="/login/signup" method="POST">
                        <!--ad-->
                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="login-username" type="text" class="form-control" name="ad" placeholder="Ad">
                        </div>
                        <!--soyad-->
                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="login-password" type="text" class="form-control" name="soyad" placeholder="Soyad">
                        </div>
                        <!--kullaniciadi-->
                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="login-password" type="text" class="form-control" name="kullaniciAdi" placeholder="Kullanıcı Adı">
                        </div>
                        <!--sifre-->
                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="login-password" type="text" class="form-control" name="sifre" placeholder="Şifre" TextMode="password">
                        </div>
                        <input type="submit" class="btn btn-success" value="Kaydet">
                        <a href="/login" class="btn btn-default">Giriş Yap</a>
                    </form>
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        
                        <!--<a href="#" class="btn btn-success">Giriş</a>-->
                     
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>